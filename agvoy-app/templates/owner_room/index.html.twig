{% extends 'index.html.twig' %}

{% block title %}Room index
{% endblock %}

{% block body %}
	<h1>Book a room anywhere in the world</h1>

	<a href="{{ path('owner_room_new') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Summary</th>
				<th>Description</th>
				<th>Capacity</th>
				<th>Superficy</th>
				<th>Price</th>
				<th>Address</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for room in rooms %}
				<tr>
					<td>{{ room.id }}</td>
					<td>{{ room.summary }}</td>
					<td>{{ room.description }}</td>
					<td>{{ room.capacity }}</td>
					<td>{{ room.superficy }}</td>
					<td>{{ room.price }}</td>
					<td>{{ room.address }}</td>
					<td>
						<a href="{{ path('owner_room_show', {'id': room.id}) }}">show</a>
						<a href="{{ path('owner_room_edit', {'id': room.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('owner_show', {'id': owner.id}) }}">Show owner</a>
{% endblock %}
