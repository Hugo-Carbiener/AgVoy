{% extends 'index.html.twig' %}

{% block main %}
	<h1>Room</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ room.id }}</td>
			</tr>
			<tr>
				<th>Summary</th>
				<td>{{ room.summary }}</td>
			</tr>
			<tr>
				<th>Regions</th>
				<td>
					{% for region in room.region %}
						{{region.name}}
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ room.description }}</td>
			</tr>
			<tr>
				<th>Capacity</th>
				<td>{{ room.capacity }}</td>
			</tr>
			<tr>
				<th>Superficy</th>
				<td>{{ room.superficy }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ room.price }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ room.address }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ vich_uploader_asset(room, 'imageFile') }}"/></td>
			</tr>
		</tbody>
	</table>


	<a class="btn btn-primary" href="{{ path('room_index') }}">
		<button class="btn btn-lg btn-primary">back to list</button>
	</a>


{% endblock %}
