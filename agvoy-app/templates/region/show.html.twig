{% extends 'index.html.twig' %}

{% block main %}
	<h1>Region</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ region.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ region.name }}</td>
			</tr>
			<tr>
				<th>Presentation</th>
				<td>{{ region.presentation }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ region.country }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ vich_uploader_asset(region, 'imageFile') }}"/></td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('region_index') }}">
		<button class="btn-lg btn-outline-dark back-to-list-btn">back to list â†’</button>
	</a>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('region_edit', {'id': region.id}) }}">
			<button class="btn btn-lg btn-primary">edit</button>
		</a>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		{{ include('region/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
