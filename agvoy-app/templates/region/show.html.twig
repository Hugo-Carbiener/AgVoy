{% extends 'index.html.twig' %}

{% block main %}
	<h1>Region</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ region.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ region.name }}</td>
			</tr>
			<tr>
				<th>Presentation</th>
				<td>{{ region.presentation }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ region.country }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('region_index') }}">
		<button class="btn btn-lg btn-primary">back to list</button>
	</a>

	<a href="{{ path('region_edit', {'id': region.id}) }}">
		<button class="btn btn-lg btn-primary">edit</button>
	</a>

	{{ include('region/_delete_form.html.twig') }}
{% endblock %}
