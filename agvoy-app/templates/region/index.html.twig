{% extends 'index.html.twig' %}

{% block main %}
	<h1>Region index</h1>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('region_new') }}">Create new</a>
	{% endif %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Presentation</th>
				<th>Country</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for region in regions %}
				<tr>
					<td>{{ region.id }}</td>
					<td>{{ region.name }}</td>
					<td>{{ region.presentation }}</td>
					<td>{{ region.country }}</td>
					<td>
						<a href="{{ path('region_show', {'id': region.id}) }}">
							<button class="btn btn-lg btn-outline-primary">show</button>
						</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('region_edit', {'id': region.id}) }}">
								<button class="btn btn-lg btn-outline-primary">edit</button>
							</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
