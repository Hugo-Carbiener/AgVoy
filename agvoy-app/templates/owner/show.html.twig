{% block main %}
	<h1>Owner</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ owner.id }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ owner.firstname }}</td>
			</tr>
			<tr>
				<th>Familyname</th>
				<td>{{ owner.familyname }}</td>
			</tr>
			<tr>
